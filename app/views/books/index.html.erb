<h1><%= pluralize(@books.count, "Book") %> </h1>

<% @books.each do |book| %>
	<article>

		<header>
			<h2><%= book.title %></h2>
		</header>

		<p><%= truncate(book.description, length: 80, separator: "") %></p>

		<table>
			<tr>
				<th>Author:</th>
				<td><%= book.author %></td>
			</tr>	

			<tr>
				<th>Released on:</th>
				<td><%= format_date(book) %></td>
			</tr>

			<tr>
				<th>Rating:</th>
				<td><%= book.rating %> star(s)</td>
			</tr>

			<tr>
				<th>Price:</th>
				<td><%= number_to_currency book.price %></td>
			</tr>
		</table>
	</article>
<% end %>